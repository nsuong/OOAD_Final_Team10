@model QuanLyThuVien.ViewModels.DocGiaLogin
@using Microsoft.AspNetCore.Http
@{
    ViewData["Title"] = "Login";
}

<h2>Login</h2>
@using (Html.BeginForm("Login", "DocGia"))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(m => m.TaiKhoan, htmlAttributes: new { @class = "control-label" })
        @Html.EditorFor(m => m.TaiKhoan, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(m => m.TaiKhoan, "", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.MatKhau, htmlAttributes: new { @class = "control-label" })
        @Html.EditorFor(m => m.MatKhau, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(m => m.MatKhau, "", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        <input type="submit" name="name" value="Đăng nhập" class="btn btn-default" />
        <p>@Context.Session.GetString("TaiKhoan")</p>
    </div>

}
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
